@model MinhaDemoMvc.Models.Filme

@{
    ViewData["Title"] = "Alterar o filme";
}

<h1>@ViewData["Title"]</h1>

<h4>Filme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <input type="hidden" asp-for="Id" />


            <partial name="_DadosFormulario" />


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">De volta à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
